<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    
    <!-- Autofill permissions -->
    <uses-permission android:name="android.permission.BIND_AUTOFILL_SERVICE" />

    <application
        android:name=".PasswordManagerApplication"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PasswordManager"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PasswordManager"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Autofill Activity -->
        <activity
            android:name=".autofill.AutofillActivity"
            android:exported="false"
            android:theme="@style/Theme.PasswordManager"
            android:windowSoftInputMode="adjustResize" />
            
        <!-- Autofill Settings Activity -->
        <activity
            android:name=".presentation.settings.AutofillSettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.PasswordManager" />
        
        <!-- Autofill Service -->
        <service
            android:name=".autofill.PasswordManagerAutofillService"
            android:exported="true"
            android:permission="android.permission.BIND_AUTOFILL_SERVICE">
            <intent-filter>
                <action android:name="android.service.autofill.AutofillService" />
            </intent-filter>
            <meta-data
                android:name="android.autofill"
                android:resource="@xml/autofill_service" />
        </service>
    </application>

</manifest>